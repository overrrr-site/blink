{
  "name": "pet-carte-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Pet Carte Backend Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc || true",
    "start": "node dist/index.js",
    "db:migrate": "node-pg-migrate up",
    "db:migrate:down": "node-pg-migrate down",
    "db:migrate:store-info": "tsx src/db/migrate.ts",
    "db:check-migration": "tsx src/db/check-migration.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:migrate-auth": "tsx src/db/migrate-staff-to-supabase.ts"
  },
  "dependencies": {
    "@line/bot-sdk": "^10.6.0",
    "@supabase/supabase-js": "^2.39.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "googleapis": "^170.1.0",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.12",
    "payjp": "^3.0.0",
    "pg": "^8.11.3",
    "resend": "^6.9.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^7.0.5",
    "@types/pg": "^8.10.9",
    "node-pg-migrate": "^6.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
